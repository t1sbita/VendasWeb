@model VendasWeb.Models.Vendedor

@{
    ViewData["Title"] = "Editar Vendedor";
}

<h1>Editar</h1>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendedorId" />
            <div class="form-group">
                <label asp-for="VendedorNome" class="control-label">Nome</label>
                <input asp-for="VendedorNome" class="form-control" />
                <span asp-validation-for="VendedorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendedorEmail" class="control-label">Email</label>
                <input asp-for="VendedorEmail" class="form-control" />
                <span asp-validation-for="VendedorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendedorAniversario" class="control-label">Aniversário</label>
                <input asp-for="VendedorAniversario" class="form-control" type="date" />
                <span asp-validation-for="VendedorAniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendedorSalario" class="control-label">Salário base</label>
                <input asp-for="VendedorSalario" class="form-control" />
                <span asp-validation-for="VendedorSalario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
